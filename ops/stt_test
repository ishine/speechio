import argparse
from sio import stt

if __name__ == '__main__':
    parser = argparse.ArgumentParser()
    parser.add_argument('--config', type = str, required = True)
    parser.add_argument('dir', type = str)
    args = parser.parse_args()

    stt.recognize(args.config, args.dir)
